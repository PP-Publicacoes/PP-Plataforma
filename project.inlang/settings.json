{
  "$schema": "https://inlang.com/schema/project-settings",
  "modules": [
    "https://cdn.jsdelivr.net/npm/@inlang/plugin-message-format@4/dist/index.js",
    "https://cdn.jsdelivr.net/npm/@inlang/plugin-m-function-matcher@2/dist/index.js"
  ],
  "plugin.inlang.messageFormat": {
    "pathPattern": [
      "./messages/auth/{locale}.json",
      "./messages/sidebar/{locale}.json",
      "./messages/routes/{locale}.json",
      "./messages/table/{locale}.json",
      "./messages/toast/{locale}.json",
      "./messages/forms/{locale}.json",
      "./messages/general/{locale}.json"
    ]
  },
  "baseLocale": "pt",
  "locales": ["pt", "en"]
}
