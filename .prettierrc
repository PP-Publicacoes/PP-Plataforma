{
  "useTabs": false,
  "singleQuote": true,
  "trailingComma": "all",
  "printWidth": 100,
  "plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte"
      }
    }
  ],
  "arrowParens": "avoid",
  "bracketSameLine": false,
  "bracketSpacing": true,
  "experimentalTernaries": true,
  "objectWrap": "preserve",
  "singleAttributePerLine": true,
  "svelteBracketNewLine": true,
  "htmlWhitespaceSensitivity": "ignore"
}
